/* example/uploader/uploader.wxss */
page {
  background-color: rgb(241, 241, 241)
}
.page__hd {
  padding:20rpx;
}
.weui-cell__bd {
  width: 100%;
}


/*图片选择部分*/
.weui-uploader__hd {
  padding-left: 15px;
  color: #999;
  font-size: 14px;
}
.weui-uploader {
  background-color: rgb(241, 241, 241)
}
.weui-uploader__input-box {
  float: none;
  margin: 20rpx auto;
}
.weui-uploader__file {
  float: none;
}
.weui-uploader__file image {
  margin: 20rpx auto;
}
.weui-uploader__bd {
  margin: 0;
}

/*通用部分*/
.weui-cells__title {
  margin-top: 30rpx;
}

/*标签部分*/
.tag-cell {
  display: block;
}
.tags {
  display: inline-block;
}
.label {
  margin-right: 15rpx;
  margin-top: 15rpx;
  display: inline-block;
}
.tag-input {
  display: inline-block;
  width: 450rpx;
}

/*单选部分*/
.weui-cells radio-group {
  background-color: rgb(241, 241, 241);
}
.weui-cell::before {
  border-top: none;
}
.weui-check__label {
  margin-bottom: 10rpx;
  background-color: #fff;
}

/*输入框部分*/
.weui-label {
  font-size: 0.75rem;
}

/*按钮部分*/
button {
  margin: 20rpx;
}
button[type="primary"] {
  background-color: #2C3E50;
}
button[type="primary"]:active {
  background-color: #34495E;
}
button[type="primary"]:visited {
  background-color: #2C3E50;
}
button[type="primary"]:hover {
  background-color: #34495E;
}