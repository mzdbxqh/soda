page{
  background-color: #f5f5f5;
}

.topbar{
  height: 250rpx;
  background: #fff;
  box-shadow: 0px 0px 5px #ccc;
  margin-bottom: 25rpx;
}
.topbar image{
  width: 579rpx;
  height: 60rpx;
  display: inline-block;
  margin: 10px 85rpx;
}
.topbar text{
  width: 700rpx;
  font-size: 14px;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  display: inline-block;
  text-align: center;
  margin: 0 auto;
  color: #2C3E50;
}

.members-box{
  width: 232rpx;
  height: 290rpx;
  float: left;
  margin-top: 13rpx;
  margin-left: 14rpx;
  margin-right: 0;
  position: relative;
  overflow: hidden;
}
.avatar{
  width: 220rpx;
  height: 220rpx;
  border: 5rpx solid #000;
  margin: 0 4rpx;
  z-index: 1;
  position: absolute; 
}
.member-tip {
  width: 220rpx;
  height: 220rpx;
  border: 5rpx solid #000;
  margin: 0 4rpx;
  position: absolute; 
  background: url("http://picture.91xiaban.com/resources/2C3E50-70.png") repeat;
  z-index: 99;
}
.member-tip-text {
  width: 220rpx;
  padding-left: 40rpx;
  padding-top: 60rpx;
  font-size: 14px;
  color: #ffffff;
}
.name{
  position: absolute;
  top: 240rpx;
  left: 0;
  width: 232rpx;
  font-size: 14px;
  color: #2C3E50;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  display: block;
  text-align: center;
  margin: 0px auto;
}
.join-box {
  position: absolute;
  /* bottom:-57px; */
  bottom: 0;
  left: 0;
  width: 100%;
}
.join-pic {
  width: 150px;
  height: 57px;
  display: block;
  margin: 0 auto;
}
.join-text {
  display: block;
  text-align: center;
  height: 30px;
  color: #3498D8;
  font-size: 12px;
}
.join-text text {
  border-bottom: 1px solid #3498D8;
}